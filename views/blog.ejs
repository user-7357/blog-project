<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
    <title>blog</title>
</head>
<body>
    <%- include("./partials/navbar.ejs") %>
    
    <div class="container">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageUrl %>"/>
        <p><%= blog.body %></p>
    </div>

    <div class="container">
        <img src="<%= blog.createdBy.profileImageUrl %>" > <h4><%= blog.createdBy.fullName %></h4>
        
    </div>


    <div class="container">
        <a class="icon-link" href="/">
            Previous
            <svg class="bi" aria-hidden="true"><use xlink:href="#arrow-right"></use></svg>
          </a>
    </div>

    <div class="container">
        <h1>comments</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                  <label for="content" class="form-label">Add your comment hear..</label>
                  <textarea class="form-control" name="content" id="content_id" rows="2"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        <% } %>
    </div>

    <div class="mt-3">
        <% comments.forEach(comment => { %>
            <img src="<%= comment.createdBy.profileImageUrl %>" >
            <%= comment.createdBy.fullName %>: <pre><%=  comment.content %></pre>
        <% }) %>
    </div>

    <%- include("./partials/script") %>
</body>
</html>